files:
  /etc/nginx/conf.d/proxy.conf:
    mode: "000644"
    owner: root
    group: root
    content: |
      map $http_upgrade $connection_upgrade {
          default     "upgrade";
      }
      server {
        listen 8080;

        if ($time_iso8601 ~ "^(\d{4})-(\d{2})-(\d{2})T(\d{2})") {
            set $year $1;
            set $month $2;
            set $day $3;
            set $hour $4;
        }
        access_log /var/log/nginx/healthd/application.log.$year-$month-$day-$hour healthd;
        access_log /var/log/nginx/access.log  main;

        root /var/app/current/dist;


        location /prod-api/ {
            resolver 172.31.0.2 valid=30s;
            set $upstream_endpoint APISERVERURL;
            rewrite ^/prod-api/(.*) /$1 break;
            proxy_pass          $upstream_endpoint;
            proxy_redirect      / /prod-api/;
            proxy_http_version  1.1;

            proxy_set_header    Connection          $connection_upgrade;
            proxy_set_header    Upgrade             $http_upgrade;
            proxy_set_header    Host                $host;
            proxy_set_header    X-Real-IP           $remote_addr;
            proxy_set_header    X-Forwarded-For     $proxy_add_x_forwarded_for;
        }

        location /file/ {
            resolver 172.31.0.2 valid=30s;
            set $upstream_endpoint S3SERVERURL;
            proxy_pass          $upstream_endpoint;
            proxy_http_version  1.1;

            proxy_set_header    Connection          $connection_upgrade;
            proxy_set_header    Upgrade             $http_upgrade;
            proxy_set_header    Host                $host;
            proxy_set_header    X-Real-IP           $remote_addr;
            proxy_set_header    X-Forwarded-For     $proxy_add_x_forwarded_for;
        }

        location / {
            try_files $uri $uri/ /index.html =404;
        }

        location /index.html {
            expires 0;
        }

        gzip on;
        gzip_comp_level 4;
        gzip_types text/html text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript;
        client_max_body_size 50M;
      }

  /opt/elasticbeanstalk/hooks/configdeploy/post/99_kill_default_nginx.sh:
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/bin/bash -xe
      rm -f /etc/nginx/conf.d/00_elastic_beanstalk_proxy.conf
      service nginx stop
      service nginx start

container_commands:
 removeconfig:
    command: "rm -f /tmp/deployment/config/#etc#nginx#conf.d#00_elastic_beanstalk_proxy.conf /etc/nginx/conf.d/00_elastic_beanstalk_proxy.conf"
 monotornode:
    command: "sudo sed -i 's/\\/opt\\/elasticbeanstalk\\/bin\\/healthd-track-pidfile --name application --location \\/var\\/run\\/nodejs\\.pid//g' /opt/elasticbeanstalk/hooks/appdeploy/enact/60monitor_pids.sh"


